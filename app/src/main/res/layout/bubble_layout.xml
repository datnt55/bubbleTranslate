<?xml version="1.0" encoding="utf-8"?>
<com.datnt.bubble.bubble.MagnifierLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/bubble_size"
    android:layout_height="@dimen/bubble_size"
    android:clipChildren="false"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/imageViewBubble"
        android:layout_width="@dimen/bubble_size"
        android:layout_height="@dimen/bubble_size"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bubble_pink" />

    <ProgressBar
        android:id="@+id/progressLookingUp"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/bubble_size"
        android:layout_height="@dimen/bubble_size"
        android:adjustViewBounds="true"
        android:elevation="0dp"
        android:indeterminateDrawable="@drawable/circular_progress_bar"
        android:padding="0dp"
        android:progressDrawable="@drawable/circular_progress_bar" />
</com.datnt.bubble.bubble.MagnifierLayout>
